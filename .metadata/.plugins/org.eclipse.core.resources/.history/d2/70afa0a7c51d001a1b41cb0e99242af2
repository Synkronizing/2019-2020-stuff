	public static int[] bubbleSort(int[] list){
		int i,j,temp=0;
		for(i=0;i<list.length -1;i++) {
			for(j=0;j<list.length-i-1;j++) {
				if(list[j]>list[j+1]) {
					temp = list[j];
					list[j]=list[j+1];
					list[j+1]=temp;
				}
			}
		
	}
		return list;
	}
}
